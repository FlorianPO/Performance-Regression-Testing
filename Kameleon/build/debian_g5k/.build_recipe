    - exec_out: sleep 1
    - exec_out: echo "Submitting a job for deployment"
    - exec_out: |-
        echo "Retrieving job ID"
        export job_id=`oarstat -u | grep -o -E '[0-9]+' | head -1 | sed -e 's/^0\+//'`
