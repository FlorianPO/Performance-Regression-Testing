  ControlPath /tmp/a9dc3a1db868%r@%h:%p
  ControlMaster auto
  ControlPersist yes
  Compression yes
Host g5kaccess
  User fpopek
  Hostname access.grid5000.fr
Host grenoble
  User fpopek
  ProxyCommand ssh -F /home/bepo/Bureau/debian7/execution/build/execo_recipe/ssh_config g5kaccess -W %h:%p
EOF
